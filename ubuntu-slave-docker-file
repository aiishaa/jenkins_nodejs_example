FROM ubuntu:18.04

RUN apt-get update

RUN apt-get install -y openjdk-11-jdk openssh-server 

RUN groupadd -g 1000 jenkins && \
	useradd -u 1000 -g jenkins -s /bin/bash -m -d /home/jenkins jenkins && usermod -aG sudo jenkins

RUN echo 'jenkins:abc123' | chpasswd

RUN service ssh start

CMD ["/usr/sbin/sshd","-D"]

